{
	"trailingComma": "es5",
	"arrowParens": "always",
	"endOfLine": "lf",
	"printWidth": 100,
	"semi": true,
	"singleQuote": true,
	"importOrder": ["^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": true,
				"tabWidth": 2
			}
		}
	]
}
